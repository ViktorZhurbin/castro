{
	"name": "castro-monorepo",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "pnpm --filter website dev",
		"build": "pnpm --filter website build",
		"format": "biome format --write",
		"check:castro": "pnpm --filter @vktrz/castro check",
		"check": "pnpm format && pnpm check:castro",
		"loc": "pnpx cloc castro/src/ --exclude-dir=messages",
		"loc-files": "pnpm loc --by-file"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11"
	}
}
