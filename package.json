{
	"name": "castro-monorepo",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"castro",
		"plugins/*",
		"website",
		"test-sites/*"
	],
	"scripts": {
		"dev": "bun --filter website dev",
		"build": "bun --filter website build",
		"format": "biome format --write",
		"check:castro": "bun --parallel --filter @vktrz/castro check",
		"check:website": "bun --filter website type-check",
		"check": "bun format && bun check:castro && bun check:website && bun test",
		"test:sites": "bun test ./test-sites",
		"loc": "bunx cloc castro/src/ --exclude-dir=messages",
		"loc-files": "bun run loc --by-file"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11"
	}
}
