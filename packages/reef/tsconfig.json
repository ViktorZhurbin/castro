{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,

		// Output Settings
		"noEmit": true,
		"module": "nodenext",
		"target": "esnext",

		// Strictness
		"strict": true,
		"noImplicitAny": false,

		// Module Resolution
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
